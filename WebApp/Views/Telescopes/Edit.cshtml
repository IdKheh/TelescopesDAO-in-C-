@model Drozdzynski_Debowska.Telescopes.Interfaces.ITelescope

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Telescope</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Producer</label>
                <select name="ProducerId" class ="form-control" asp-items="ViewBag.Producer"></select>
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpticalSystem" class="control-label"></label>
                <select asp-for="OpticalSystem" class="form-control"
                        asp-items="Html.GetEnumSelectList<Drozdzynski_Debowska.Telescopes.Interfaces.OpticalSystem>()"></select>
                <span asp-validation-for="OpticalSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aperture" class="control-label"></label>
                <input asp-for="Aperture" class="form-control" />
                <span asp-validation-for="Aperture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FocalLength" class="control-label"></label>
                <input asp-for="FocalLength" class="form-control" />
                <span asp-validation-for="FocalLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
